# Space2Study Production Environment Variables
# Copy this file to .env.prod and fill in your values
# Usage: docker compose -f docker-compose.prod.yml --env-file .env.prod up -d

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=your_secure_password_here

# Application
CLIENT_URL=http://localhost
COOKIE_DOMAIN=localhost

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=your_access_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d
JWT_RESET_SECRET=your_reset_secret_here
JWT_RESET_EXPIRES_IN=1h
JWT_CONFIRM_SECRET=your_confirm_secret_here
JWT_CONFIRM_EXPIRES_IN=24h

# Email (Gmail OAuth2 - optional for dev)
MAIL_USER=your_email@gmail.com
GMAIL_CLIENT_ID=your_google_client_id
GMAIL_CLIENT_SECRET=your_google_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_REDIRECT_URI=https://developers.google.com/oauthplayground

# Azure Storage (optional for dev)
STORAGE_ACCOUNT=your_storage_account
ACCESS_KEY=your_access_key
AZURE_HOST=https://your_account.blob.core.windows.net
